<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/encabezado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo"
            android:paddingTop="26dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:paddingBottom="12dp"
            >

            <TextView
                android:id="@+id/title"
                android:text="Remember Medicine"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_below="@+id/title"
                android:text="you will never forget to take your medicine again"
                android:textColor="#FFFFFF"
                android:layout_marginTop="6dp"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />


        </RelativeLayout>

        <GridLayout
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingBottom="10dp"
            android:layout_below="@+id/encabezado"
            android:id="@+id/month_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="true"
            >

            <ListView
                android:id="@+id/listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </ListView>

        </GridLayout>


        <ImageButton
            android:id="@+id/agregar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/buton_oval"
            android:clickable="true"
            android:contentDescription="Agregar medicamento"
            android:maxWidth="64dp"
            android:maxHeight="64dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:scaleType="center"
            android:outlineAmbientShadowColor="@color/black"
            android:src="@drawable/ic_add_medicine"
            app:elevation="6dp"
            app:fabSize="auto"
            app:maxImageSize="64dp"
            app:backgroundTint="@null"/>

    </RelativeLayout>
    <!--app:backgroundTint=""
    app:elevation="6dp-->

</androidx.constraintlayout.widget.ConstraintLayout>