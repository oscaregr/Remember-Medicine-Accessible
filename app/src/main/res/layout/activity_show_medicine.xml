<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".showMedicine">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <RelativeLayout
            android:id="@+id/encabezado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageButton
                android:id="@+id/back"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:contentDescription="Volver a Lista"
                android:layout_width="70dp"
                android:background="@android:color/transparent"
                android:layout_height="85dp"
                android:src="@drawable/ic_back"/>

            <TextView
                android:layout_centerInParent="true"
                android:id="@+id/medicamento"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medicamento"
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="28dp"
                />

            <ImageView
                android:id="@+id/tipo"
                android:layout_width="85dp"
                android:layout_height="75dp"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentRight="true"
                />

        </RelativeLayout>

        <ScrollView
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"
                android:paddingBottom="20dp">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Editar"
                        android:background="@drawable/button_design"
                        android:textColor="@color/black"
                        app:backgroundTint="#d6ce56"
                        android:layout_alignParentLeft="true"
                        android:layout_marginRight="25dp"
                        android:drawableLeft="@android:drawable/ic_menu_edit"
                        android:paddingRight="10dp"/>

                    <Button
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Eliminar"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/button_design"
                        app:backgroundTint="@color/design_default_color_error"
                        android:drawableRight="@android:drawable/ic_menu_delete"
                        android:paddingLeft="10dp"
                        />

                </RelativeLayout>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    app:backgroundTint="@null"
                    android:backgroundTint="#dc9061"
                    android:background="?android:attr/listDivider"
                    android:importantForAccessibility="no"/>

                <TextView
                    android:id="@+id/dosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dosis"
                    android:gravity="right"
                    android:textColor="@color/black"
                    android:textSize="28dp"/>

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:backgroundTint="#e59b6d"
                    app:backgroundTint="@null"
                    android:background="?android:attr/listDivider"
                    android:importantForAccessibility="no"/>

                <TextView
                    android:id="@+id/lapso"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cada"
                    android:gravity="left"
                    android:textColor="@color/black"
                    android:textSize="28dp"/>

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:backgroundTint="#eea577"
                    android:background="?android:attr/listDivider"
                    android:importantForAccessibility="no"
                    app:backgroundTint="@null"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripcion:"
                    android:textSize="28dp"
                    />

                <TextView
                    android:id="@+id/descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="descripcion"
                    android:textSize="25dp"
                    android:gravity="left"
                    android:textColor="@color/black"/>

                <Button
                    android:id="@+id/does"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/button_design"
                    android:drawableLeft="@drawable/ic_does"
                    android:enabled="false"
                    android:padding="20dp"
                    android:shadowColor="#954535"
                    android:text="Tomado"
                    android:textColor="#FFFFFF"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    app:backgroundTint="@null"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>